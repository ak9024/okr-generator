FROM golang:alpine AS builder

WORKDIR /app
COPY go.mod go.sum ./

RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -o backend

FROM alpine:latest

WORKDIR /app

COPY --from=builder /app/backend .
COPY --from=builder /app/.config.toml.prod .config.toml

ENTRYPOINT [ "./backend", "server" ]
