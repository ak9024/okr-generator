FROM golang:alpine AS builder

ARG HOST
ARG PORT
ARG ENV
ARG VERSION
ARG TOKEN
ARG GOOGLE_CLIENT_ID
ARG GOOGLE_CLIENT_SECRET
ARG GOOGLE_REDIRECT_URL
ARG GOOGLE_CLIENT_REDIRECT_URL
ARG SUPABASE_URL
ARG SUPABASE_KEY

ENV HOST=${HOST}
ENV PORT=${PORT}
ENV ENV=${ENV}
ENV VERSION=${VERSION}
ENV TOKEN=${TOKEN}
ENV GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
ENV GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}
ENV GOOGLE_REDIRECT_URL=${GOOGLE_REDIRECT_URL}
ENV GOOGLE_CLIENT_REDIRECT_URL=${GOOGLE_CLIENT_REDIRECT_URL}
ENV SUPABASE_URL=${SUPABASE_URL}
ENV SUPABASE_KEY=${SUPABASE_KEY}

WORKDIR /app
COPY go.mod go.sum ./

RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -o backend
RUN ./backend env-generator

FROM alpine:latest

WORKDIR /app

COPY --from=builder /app/backend .
COPY --from=builder /app/.config.generated.toml .config.toml

ENTRYPOINT [ "./backend", "server" ]
